{
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": [
      "es6", "es2015", "es2017"
    ],
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "@types/node"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules"
  ]
}
